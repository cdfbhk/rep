sns.violinplot(x='sex', y='age', data=dataset, hue='survived', split=True)

sns.stripplot(x='sex', y='age', data=dataset, jitter=True)

sns.stripplot(x='sex', y='age', data=dataset, jitter=True, hue='survived')

